<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="3.2"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd">
    <persistence-unit name="library_system">
        <!-- CLASSES -->
        <class>org.example.Entities.User</class>
        <class>org.example.Entities.Author</class>
        <class>org.example.Entities.Book</class>
        <class>org.example.Entities.Genre</class>
        <class>org.example.Entities.Loan</class>

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/library_system"/>
            <property name="jakarta.persistence.jdbc.user" value="user"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>
            <!-- Automatically export the schema -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- STÃ„NG AV LOGGING -->
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.use_sql_comments" value="false"/>
            <property name="hibernate.generate_statistics" value="false"/>
            <property name="hibernate.highlight_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
